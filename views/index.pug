extends layout

block content
  .flex.items-center.flex-col
    h1.text-2xl.mt-5.font-bold API Project: File Metadata Microservice

    h1.text-2xl.mt-5.font-bold Usage:

    h1.text-xl.mt-5 Please upload a file

    .flex.flex-row(class="w-10/12")
      .flex.flex-col.flex-grow.items-center
        form.bg-green-400.px-4.py-8.rounded.my-8.w-72(method="POST" action="/api/fileanalyse" enctype="multipart/form-data")
          input.w-full.rounded.my-2.px-2.leading-7.border(name="upfile" required type="file")
          button.w-full.bg-gray-400.border-none.rounded.py-2(type="submit") Upload
